
<table class="table table-striped">
  <thead>
    <tr>
      <th>Link</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% documents.each do |document| %>
      <tr>
        <td><%= link_to document.document_identifier, document.document_url %></td>
        <td>
          <%= link_to 'Delete', document_path(document), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>