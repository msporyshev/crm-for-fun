<h1>Case</h1>

<p>
  <b>Title</b><br>
  <%= @case.title %>
</p>
<div>
  <b>Add Participants</b><br>
  <%= select_tag nil ,
    options_for_select(current_user.people.map { |p| [p.name + " " + p.surname, p.id] }),
    class: "participant_select",
    id: @case.id %>
</div>

<div class="form-actions">
  <%= link_to 'Back', cases_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_case_path(@case), :class => 'btn' %>
  <%= link_to 'Delete', case_path(@case), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
