<%= simple_form_for(@user,  :html => {:class => 'form-horizontal' }) do |f| %>

  <div class="form-inputs">
    <%= f.error_notification %>
    <%= f.input :email, :as => :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :name %>
    <%= f.input :surname %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
