<h1>User</h1>

<p>
  <b>Email</b><br>
  <%= @user.email %>
</p>

<p>
  <b>Name</b><br>
  <%= @user.name %>
  <%= @user.surname %>
</p>

<div class="form-actions">
  <%= link_to 'Back', users_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_user_path(@user), :class => 'btn' %>
  <%= link_to 'Delete', user_path(@user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
