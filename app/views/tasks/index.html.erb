<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Closed</th>
      <th>Title</th>
      <th>Contact</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.closed %></td>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= task.person ? link_to(task.person.name + " " + task.person.surname, person_path(task.person)) : nil %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', task_path(task), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_task_path, :class => 'btn btn-primary' %>
